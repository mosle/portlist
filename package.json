{
  "name": "port-list-viewer",
  "version": "1.0.0",
  "description": "Desktop app to view and manage listening server ports",
  "type": "module",
  "main": "dist/main/index.js",
  "scripts": {
    "build:preload": "esbuild src/preload/index.ts --bundle --outfile=dist/preload/index.js --format=cjs --platform=node --external:electron",
    "build:renderer": "esbuild src/renderer/index.ts --bundle --outfile=dist/renderer/index.js --format=iife --platform=browser --target=chrome120",
    "build:icons": "node scripts/generate-icons.js",
    "copy-assets": "node scripts/copy-assets.js",
    "dev": "tsc && npm run build:preload && npm run build:renderer && npm run copy-assets && electron .",
    "build": "tsc && npm run build:icons && npm run build:preload && npm run build:renderer && npm run copy-assets",
    "test": "vitest run",
    "test:watch": "vitest",
    "start": "electron .",
    "package": "electron-builder"
  },
  "keywords": [
    "electron",
    "port",
    "process",
    "manager"
  ],
  "author": {
    "name": "Yosuke Yasuda",
    "email": "yskysd@gmail.com"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.20.0",
  "devDependencies": {
    "@types/node": "^20.17.12",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "esbuild": "^0.27.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "electron-store": "^10.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron"
    ]
  },
  "build": {
    "appId": "com.mosless.portlist",
    "productName": "portlist",
    "icon": "build/icon.icns",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development"
    }
  }
}